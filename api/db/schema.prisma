datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model Course {
  id          String   @id @default(uuid())
  category    String
  course_type String
  day         String
  time        String
  members     Member[]
}

model Member {
  id         String   @id @default(uuid())
  first_name String
  last_name  String
  phone      String?
  mobil      String?
  email      String
  Courses    Course[]
}

