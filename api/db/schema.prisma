datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model Course {
  id           Int      @id @default(autoincrement())
  category     String
  course_type  String
  day          String
  time         String
  participants Member[]
}

model Member {
  id          Int      @id @default(autoincrement())
  first_name  String
  last_name   String
  phone       String?
  mobil       String?
  email       String
  Course      Course?  @relation(fields: [courseId], references: [id])
  courseId    Int?
}

